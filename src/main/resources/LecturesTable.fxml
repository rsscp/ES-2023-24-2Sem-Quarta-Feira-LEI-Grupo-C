<VBox fx:id="root" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.project.ui.LecturesTableController">
    <padding>
        <Insets bottom="10.0" left="30.0" right ="30.0" top="10.0"/>
    </padding>
    <GridPane fx:id="grid" hgap="15" vgap="10">
        <padding>
            <Insets bottom="20.0"/>
        </padding>
    </GridPane>
    <Button onAction="#applyFilters" GridPane.columnIndex="3" minWidth="100" minHeight="30">Apply Filters</Button>
    <GridPane fx:id="grid2" hgap="15" vgap="10">
        <padding>
            <Insets bottom="20.0"/>
        </padding>
    </GridPane>
    <TableView fx:id="lectureTable" prefHeight="10000"></TableView>
</VBox>
